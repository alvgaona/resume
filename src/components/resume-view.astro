---
import type { ResumeData } from "@/types/resume";
import MyAvatar from "@/components/my-avatar";
import { Separator } from "@/components/ui/separator";
import { Badge } from "@/components/ui/badge";
import ProjectCard from "@/components/project-card";
import { Dot } from "lucide-react";

interface Props {
  data: ResumeData;
  labels: Record<string, string>;
  showProjects?: boolean;
}

const { data, labels, showProjects = false } = Astro.props;
---

<main
  id="main-content"
  class="flex flex-col gap-6 px-12 md:mx-32 md:my-12 lg:mx-48 xl:mx-64 2xl:mx-96 print:mx-0"
>
  <!-- Header -->
  <div class="mb-6 flex items-center gap-8">
    <MyAvatar client:load className="h-24 w-24" />
    <div class="flex flex-col">
      <h1 class="font-medium text-2xl">{data.name}</h1>
      <p class="text-[11px] font-thin uppercase">
        {data.location.value}
      </p>
    </div>
  </div>

  <!-- Social -->
  <section class="flex flex-col gap-2" aria-labelledby="social-heading">
    <h2
      id="social-heading"
      class="text-[11px] uppercase text-black/60 dark:text-white/60"
    >
      {labels["nav.social"]}
    </h2>
    <Separator />
    <div class="flex items-center gap-4 text-xs">
      <ul class="flex gap-2 uppercase">
        {
          data.contact.social.map((item, index) => (
            <>
              <li class="cursor-pointer hover:underline">
                <a href={item.url} rel="noopener noreferrer" target="_blank">
                  {item.name}
                </a>
              </li>
              {index < data.contact.social.length - 1 && <li>&bullet;</li>}
            </>
          ))
        }
      </ul>
    </div>
  </section>

  <!-- Experience -->
  <section class="flex flex-col gap-2" aria-labelledby="experience-heading">
    <h2
      id="experience-heading"
      class="text-[11px] uppercase text-black/60 dark:text-white/60"
    >
      {labels["nav.experience"]}
    </h2>
    <Separator />
    <ul class="flex flex-col gap-2">
      {
        data.experience.map((i) => {
          return (
            <li class={`${i.break ? "break-before-page" : ""}`}>
              <h3 class="text-base font-semibold">{i.position}</h3>
              <div class="flex gap-1">
                <span class="text-xs uppercase text-black/60 dark:text-white/60">
                  {i.company.name} &bullet; {i.date}
                </span>
              </div>
              <ul class="mt-2 list-inside list-disc text-sm text-black/60 dark:text-white/60">
                {i.responsibilities?.map((r) => (
                  <li>{r}</li>
                ))}
              </ul>
            </li>
          );
        })
      }
    </ul>
  </section>

  <!-- Education -->
  <section class="flex flex-col gap-2" aria-labelledby="education-heading">
    <h2
      id="education-heading"
      class="text-[11px] uppercase text-black/60 dark:text-white/60"
    >
      {labels["nav.education"]}
    </h2>
    <Separator />
    <ul class="flex flex-col gap-2">
      {
        data.education.map((i) => (
          <li>
            <h3 class="text-base font-semibold">{i.title}</h3>
            <p class="text-xs uppercase text-black/60 dark:text-white/60">
              {i.description}
            </p>
            <div class="flex gap-1">
              <span class="text-xs uppercase text-black/60 dark:text-white/60">
                {i.location} &bullet; {i.span}
              </span>
            </div>
            <ul class="mt-2 list-inside list-disc text-sm text-black/60 dark:text-white/60">
              {i.bullets?.map((r) => (
                <li>{r}</li>
              ))}
            </ul>
          </li>
        ))
      }
    </ul>
  </section>

  <!-- Skills -->
  <section class="flex flex-col gap-2" aria-labelledby="skills-heading">
    <h2
      id="skills-heading"
      class="text-[11px] uppercase text-black/60 dark:text-white/60"
    >
      {labels["nav.skills"]}
    </h2>
    <Separator />
    <ul class="flex flex-col gap-4">
      {
        data.skills.map((item) => (
          <li
            class={`${item.break ? "break-before-page" : ""} flex flex-col gap-2 pr-14`}
          >
            <span class="text-xs uppercase text-black/60 dark:text-white/60">
              {item.category}
            </span>
            <div class="flex flex-wrap gap-1 text-center text-sm text-slate-200">
              {item.badges.map((badge) => (
                <Badge className="text-white select-none dark:bg-zinc-900">
                  {badge}
                </Badge>
              ))}
            </div>
          </li>
        ))
      }
    </ul>
  </section>

  <!-- Publications -->
  <section class="flex flex-col gap-2" aria-labelledby="publications-heading">
    <h2
      id="publications-heading"
      class="text-[11px] uppercase text-black/60 dark:text-white/60"
    >
      {labels["nav.publications"]}
    </h2>
    <Separator />
    <ul
      class="mt-2 flex list-inside list-disc flex-col gap-4 text-sm text-black/60 dark:text-white/60"
    >
      {data.publications?.map((p) => <li>{p.title}</li>)}
    </ul>
  </section>

  <!-- Languages -->
  <section class="flex flex-col gap-2" aria-labelledby="languages-heading">
    <h2
      id="languages-heading"
      class="text-[11px] uppercase text-black/60 dark:text-white/60"
    >
      {labels["nav.languages"]}
    </h2>
    <Separator />
    <ul class="mt-2 flex flex-col gap-1 text-sm">
      {
        data.languages?.map((p) => (
          <li class="flex flex-col">
            <span>{p.name}</span>
            <span class="text-xs text-black/60 dark:text-white/60">
              {p.proficiency}
            </span>
          </li>
        ))
      }
    </ul>
  </section>

  <!-- Projects (Optional) -->
  {
    showProjects && data.projects && (
      <section
        class="page-break flex flex-col gap-2"
        aria-labelledby="projects-heading"
      >
        <h2
          id="projects-heading"
          class="text-[11px] uppercase text-black/60 dark:text-white/60"
        >
          {labels["nav.projects"]}
        </h2>
        <Separator />
        <div class="mt-4 grid grid-cols-1 gap-3 md:grid-cols-2 print:grid-cols-2 print:gap-2">
          {data.projects.map((p) => {
            return (
              <ProjectCard
                client:load
                title={p.title}
                institution={p.company}
                location={p.location}
                date={p.span}
                description={p.description}
                keywords={p.tags}
                details={p.details || []}
                pageBreak={p.break}
              />
            );
          })}
        </div>
      </section>
    )
  }

  <!-- Certifications -->
  <section class="flex flex-col gap-2" aria-labelledby="certifications-heading">
    <h2
      id="certifications-heading"
      class="text-[11px] uppercase text-black/60 dark:text-white/60 page-before-break"
    >
      {labels["nav.certifications"]}
    </h2>
    <Separator />
    <ul class="my-2 grid grid-cols-2 text-xs sm:text-sm">
      {
        data.certifications.map((c) => (
          <a target="_blank" rel="noopener noreferrer" href={c.url}>
            <li class="mb-2 flex flex-col">
              <div class="flex items-center text-start">
                <span class="font-semibold underline-offset-2 hover:underline">
                  {c.name}{" "}
                  <Dot color="#ffc799" className="-ml-1 inline-block" />
                </span>
              </div>
              <div class="flex gap-1 text-xs text-black/60 dark:text-white/60">
                <span>{c.company}</span>
                &bullet;
                <span>Issued {c.issued}</span>
              </div>
            </li>
          </a>
        ))
      }
    </ul>
  </section>
</main>
